<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <Button
        android:id="@+id/button_list"
        android:layout_width="@dimen/button_width"
        android:layout_height="@dimen/button_height"
        android:layout_marginRight="@dimen/button_marginRight"
        android:text="Play" />

    <TextView
        android:id="@+id/text_main_song"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/text_view_margin"
        android:textSize="@dimen/text_size_song"
        android:textStyle="bold"
        tools:text="song" />

    <TextView
        android:id="@+id/text_main_artist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/text_view_margin"
        android:textSize="@dimen/text_size_artist"
        android:layout_below="@id/text_main_song"
        tools:text="artist" />

    <TextView
        android:id="@+id/text_main_year"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/text_view_margin"
        android:textSize="@dimen/text_size_year"
        android:textStyle="italic"
        android:layout_below="@id/text_main_artist"
        tools:text="year" />

</RelativeLayout>
